@model IEnumerable<TCC_BUGGY.Models.Ocorrencia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeOcorrencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comissionavel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeOcorrencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comissionavel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdOcorrencia">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdOcorrencia">Details</a> |
