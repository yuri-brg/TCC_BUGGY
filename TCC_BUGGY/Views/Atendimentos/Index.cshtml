@model IEnumerable<TCC_BUGGY.Models.Atendimento>

@{
    ViewData["Title"] = "Atendimentos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class ="btn btn-default"> Inserir Atendimento</a>
</p>



<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdOcorrencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeOcorrencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Complemento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataOcorrencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdOcorrencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeOcorrencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complemento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataOcorrencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAtendimento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAtendimento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAtendimento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
